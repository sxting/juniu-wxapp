}


/*弹框  */
.alert-bg {
  background-color: rgba(0, 0, 0, 0.6);
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.alert-box {
  width: 600rpx;
  height: 292rpx;
  background-color: #fff;
  position: fixed;
  top: 300rpx;
  left: 50%;
  margin-left: -300rpx;
  border-radius: 28rpx;
  text-align: center;
}
.alert-title {
  font-size: 36rpx;
  padding: 50rpx 0 30rpx;
}
.alert-tip {
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 20rpx;
}
.alert-btn {
  font-size: 36rpx;
  color: #FF6600;
  height: 92rpx;
  line-height: 92rpx;
  border-top: 2rpx solid #F3F3F3;
}
.alert-btnl, .alert-btnr {
  width: 50%;
  box-sizing: border-box;
  float: left;
}
.alert-btnr {
  color: #666666;
  border-left: 2rpx solid #F3F3F3; 
  height: 90rpx;
}

/*底部桔牛logo样式  */
.juniu-bottom {
  background: #fff;
  text-align: center;
  height: 40rpx;
  position: absolute;
  bottom: 40rpx;
  width: 100vw;
}
.juniu-bottom image {
  width: 80rpx;
  height: 40rpx;
}

/*评论的样式start*/
.comment-box {
    margin-top:20rpx;
    background-color: #fff;
    padding-bottom:100rpx;
}
.comment-box .sub-title {
    height: 90rpx;
    line-height: 90rpx;
    padding-left: 30rpx;
    border-bottom: 1px solid #f8f8f8;
}
.comment-list {
  box-shadow: 0 2rpx 6rpx 0 rgba(216,216,216,0.50);
  border-radius: 8rpx; 
  margin: 20rpx;
   position: relative;
}
.comment-item-box {
    padding-bottom:10rpx;
    border-bottom: 1px solid #F3F3F3;
}
.comment-item-box:last-child {
    border-bottom: none;
}
.comment-top {
    display: flex;
}
.comment-top image {
    width: 100rpx;
    min-width: 100rpx;
    height: 100rpx;
    margin-top: 30rpx;
    border-radius: 50%;
    border: 1px solid #e5e5e5;
}
.comment-top-center {
    width: 100%;
    padding-top: 40rpx;
    padding-left: 16rpx;
}
.icon-starempty, .icon-stars  {
    font-size: 24rpx;
    color: #FF6600;
    padding-right: 8rpx;
}
.comment-time-box {
    font-family: "PingFangSC-Regular";
    font-size: 22rpx;
    color: #999999;
    text-align: right;
    padding-top: 44rpx;
    min-width: 222rpx;
}
.comment-content {
    font-size: 28rpx;
    color: #666;
    padding-top: 20rpx;
    margin-bottom: 20rpx;

    overflow: hidden; 
    text-overflow: ellipsis;
    display: -webkit-box; 
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.start-box {
    position: relative;
    top: -20rpx;
}
.space-start-box, .starts-box {
    position: absolute
}
.starts-box {
    z-index: 10;
}
.comment-images image {
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border-radius: 8rpx;
}
.comment-images image:last-child {
    margin-right: 0;
}
.comment-jn-bottom {
  left:-20rpx;
  bottom:-50rpx;
}

/*评论的样式end*/

