<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
    
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);background-color:#FF6600;"></view>
      </view>

      <view class="weui-tab__panel">
        <view class="weui-tab__content" style='padding-top:20rpx !important;'>
          
            <!--循环的项目-->
          <view class="tickte-item {{item.couponStatus == 'OVERDUE' || (item.productNoUse && productId) ? 'disabled' : ''}}" 
          wx:for="{{ticketList}}" bindtap="onTicketItemClick" data-couponid="{{item.couponDefId}}" data-canuse="{{!item.productNoUse}}" >
            <view class="yuan1"></view>
            <view class="yuan2"></view>

            <view class="ticket-top">
              <view class='ticket-price-box'>
                  <view class='ticket-price' wx:if="{{item.couponDefType === 'MONEY'}}"><text>{{item.couponDefAmount/100}}</text>元</view>
                  <view class='ticket-price' wx:elif="{{item.couponDefType === 'DISCOUNT'}}"><text>{{item.couponDefDiscount}}</text>折</view>
                  <view class="ticket-type" wx:if="{{item.couponDefType === 'MONEY'}}">代金券</view>
                  <view class="ticket-type" wx:elif="{{item.couponDefType === 'DISCOUNT'}}">折扣券</view>
                  <view class="ticket-type-gift" wx:else="{{item.couponDefType === 'GIFT'}}">礼品券</view>
              </view>
              <view class='ticket-title-box'>
                <view class="ticket-title">{{item.couponName}}</view>
                <view class="use-limit-box" wx:if="{{item.couponDefType === 'MONEY' || item.couponDefType === 'DISCOUNT'}}">
                  <view class="use-limit" wx:if="{{item.useLimitMoney > 0}}">消费满<text>{{item.useLimitMoney/100}}</text>元可使用</view>
                  <view class="use-limit" wx:else>无使用门槛</view>
                </view>
                <view class="gift-name" wx:else>{{item.couponDefProductName}}</view>
              </view>
              <view class="disabled-img" wx:if="{{item.couponStatus == 'OVERDUE' || (item.productNoUse && productId)}}">
                <image wx:if="{{item.couponStatus == 'OVERDUE'}}" src="/asset/images/coupon-dateunuse.png"></image>
                <image wx:else src="/asset/images/coupon-unuse.png"></image>
              </view>
            </view>

            <view class="ticket-bottom {{item.ticketSwitch === 'CLOSE' ? 'ticket-bottom-close' : ''}}"
              bindtap="onTicketBottomClick" data-marketingid="{{item.marketingId}}">
              <view class="open-btn jn-icon icon-xia" wx:if="{{item.ticketSwitch === 'CLOSE'}}"></view>
              <view class="close-btn jn-icon icon-shang" wx:else></view>
              <view>有效期：{{item.validDateStart}}至{{item.validDateEnd}}</view>
              <view wx:if="{{item.ticketSwitch === 'OPEN'}}">
                <text wx:if="{{item.disabledWeekDate}}">不可用时间：{{item.selectedWeek1}}至{{item.selectedWeek2}}（{{item.unUseStartTime}}-{{item.unUseEndTime}}）</text>
                <text wx:else>不可用时间：无限制</text>
              </view>
            </view>
          </view>
                    
        </view>
      </view>

    </view>
  </view>
</view>