<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar" style='background-color: white'>
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);background-color:#FF6600;"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" style='padding-top:20rpx !important;' hidden="{{activeIndex != 0}}">
          <view class='ticket-block'>
            <!--循环的项目-->
            <view class="div" wx:for="{{ticketList}}">
              <view class="yuan1"></view>
              <view class='ticket-content'>
                <view class='ticket-title'>
                  {{item.couponName}}</view>
                <view>
                  <view>
                    <text class='font-color' wx:if="{{item.couponDefType === 'MONEY'}}">{{item.couponDefAmount / 100}}元</text>
                    <text class='font-color' wx:elif="{{item.couponDefType === 'DISCOUNT'}}">{{item.couponDefDiscount}}折</text>
                    <block wx:if="{{item.couponDefType === 'MONEY'}}">代金券</block>
                    <block wx:elif="{{item.couponDefType === 'DISCOUNT'}}">折扣券</block>
                    <block wx:else="{{item.couponDefType === 'GIFT'}}">{{item.couponDefProductName}}礼品券</block>
                  </view>
                </view>
              </view>
              <view class='ticket-btn'>
                <view style="margin-top: 24rpx;margin-bottom:24rpx;">
                  <text>¥{{item.couponDefAmount / 100}}元</text>
                </view>
                <block wx:if="{{ticket.useLimitMoney > 0}}">
                  <view class='tip'>满{{ticket.useLimitMoney / 100}}元使用</view>
                </block>
                <block wx:else>
                  <view class='tip'>无限制</view>
                </block>
              </view>
              <view class='dot-line'></view>
              <view class="yuan2"></view>
            </view>
          </view>
        </view>
        <view class="weui-tab__content" style='padding-top:20rpx !important;' hidden="{{activeIndex != 1}}">
          <view class='ticket-block'>
            <!--循环的项目-->
