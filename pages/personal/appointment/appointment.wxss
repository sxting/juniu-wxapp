/* pages/personal/appointment/appointment.wxss */

.text {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #888;
  width: 92%;
  margin: 0 auto;
}

.mainBox {
  font-size: 26rpx;
  color: #666;
}

.BOX {
  width: 690rpx;
  background: #fff;
  margin: 30rpx auto 0;
  box-shadow: 0 2rpx 6rpx 0 #D8D8D8;
  border-radius: 8rpx;
}

.main {
  width: 92%;
  margin: 0 auto;
  margin-bottom: 28rpx;
}

.main>view {
  display: flex;
  justify-content: space-between;
}

.mainTop {
  height: 90rpx;
  line-height: 90rpx;
}

.bottom {
  height: 76rpx;
  line-height: 76rpx;
}

.topRight {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
}

.topLeft {
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #222;
}

.mainTop {
  border-bottom: 1rpx solid #e5e5e5;
}

scroll-view {
  height: 1200rpx;
  position: relative;
  z-index: 1;
}

.texts {
  font-size: 34rpx;
  color: #222;
}

.title1 {
  color: #b2b2b2 !important;
}

.reject {
  color: #999;
}

.accept {
  color: #1aae18;
}

.wait {
  color: #f64444;
}

.middle3 {
  color: #222;
}

.bottomRight {
  color: #9f9f9f;
}

.color1 {
  color: #FF3232;
}
.color2 {
  color: #03BC01;
}