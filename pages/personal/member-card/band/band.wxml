<view class="input">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input" maxlength='11' type="number" bindinput='getPhoneNumber' placeholder="请输入手机号" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__bd">
        <input class="weui-input" type="number" placeholder="请输入验证码" />
      </view>
      <view class="weui-cell__ft ">
          <view class="weui-vcode-btn btn-send-normal" wx:if="{{isDisabled}}">{{sendMegLabel}}</view>

        <view class="weui-vcode-btn {{phoneNumber?'btn-send-active':'btn-send-normal'}} " style='color: #fff !important;' wx:if="{{!isDisabled}}" bindtap='getMsgCode'>获取验证码</view>
      </view>
    </view>
  </view>
  <view class="weui-cells__tips">{{remark}}</view>
</view>
<view class="btn-bd">
  <button class="weui-btn  {{phoneNumber?'btn-active':'btn-normal'}}" type="default">确认绑定</button>
</view>