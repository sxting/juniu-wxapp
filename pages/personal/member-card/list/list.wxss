.page {
  border-top: 2rpx solid #f3f3f3;
  padding-bottom: 30rpx;
  min-height: 100vh;
  background-color: #f3f3f3;
}
.not-select {
  height: 92rpx;
  line-height: 92rpx;
  font-size: 28rpx;
  color: #666666;
  padding-left: 30rpx;
  background-color: #fff;
  width: 690rpx;
  margin: 30rpx auto 0;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.icon-select-box, .icon-select-box-selected {
  float:right;
  margin-right:30rpx;
  margin-top: 26rpx;
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  position: relative;
}
.icon-select-box-selected {
  border: 2rpx solid #ff6600;
}
.icon-duihao {
  font-size: 30rpx;
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  top: 0;
  left: 0;
  color: #ff6600;
  text-align: center;
}
.icon-right-1 {
  font-size: 30rpx;
  color: #ff6600;
  position: absolute;
  right: 6rpx;
  top: -10rpx;
}
.card-item .select-image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.card-item {
  width: 690rpx;
  height: 240rpx;
  margin: 30rpx auto 0;
  position: relative;
}
.prevent {
  width:690rpx;
  height:240rpx;
  position:absolute;
  top:0;
  left:0;
  background-color:rgba(205, 205, 205, 0.6);
  line-height:240rpx;
  text-align:center;
  color:#fff;
  z-index:100;
  border-radius:8rpx;
  font-size:38rpx;
}
.card-item>image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.card {
  position: absolute;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 240rpx;
  color: #fff;
  font-size: 36rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  
}
.card-name {
  font-family: "PingFangSC-Semibold";
  font-size: 40rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.date {
  font-size: 32rpx;
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
}
.card .fr {
  text-align: right;
  padding-right: 30rpx;
}
.tel {
  padding-top: 20rpx;
}
.erweima {
   padding-top: 10rpx; 
  font-size: 50rpx;
}

.btn-open-card {
  margin-top: 62px;
  width: 180px;
  background: #f60;
  border-radius: 4px;
  font-family: '.PingFangSC-Regular';
  font-size: 16px;
  color: #fff;
}

