.page {
  border-top: 2rpx solid #f3f3f3;
  padding-bottom: 120rpx;
}
.card-item {
  width: 690rpx;
  height: 240rpx;
  margin: 30rpx auto 0;
  position: relative;
}
.prevent {
  width:690rpx;
  height:240rpx;
  position:absolute;
  top:0;
  left:0;
  background-color:rgba(205, 205, 205, 0.6);
  line-height:240rpx;
  text-align:center;
  color:#fff;
  z-index:100;
  border-radius:8rpx;
  font-size:38rpx;
}
.card-item>image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.card {
  position: absolute;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 240rpx;
  color: #fff;
  font-size: 36rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  
}
.card-name {
  font-family: "PingFangSC-Semibold";
  font-size: 40rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.date {
  font-size: 32rpx;
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
}
.card .fr {
  text-align: right;
  padding-right: 30rpx;
}
.tel {
  padding-top: 20rpx;
}
.erweima {
   padding-top: 10rpx; 
  font-size: 50rpx;
}

.btn-open-card {
  margin-top: 62px;
  width: 180px;
  background: #f60;
  border-radius: 4px;
  font-family: '.PingFangSC-Regular';
  font-size: 16px;
  color: #fff;
}

