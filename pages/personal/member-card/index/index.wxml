<view class="container" wx:if="{{showClickBind === 'F'}}">
  <view class="card-box">
    <!-- 如果有多张会员卡， 加类名 cards-bg-box -->
    <view class="card-bg-box">
      <image src=""></image>
    </view>
    <view class="card-msg-box">
      <text class="card-name">会员卡名称</text>
      <text class="tel fr">13800138000</text>
      <text class="member-name">会员姓名</text>
      <text class="card-member">卡号：000222</text>
      <icon class="jn-icon erweima" />
    </view>
  </view>

  <view class="record-box" bindtap='goConsume'>
    <view>
      <text>消费记录</text>
      <icon class="jn-icon icon-rightblue" />
    </view>
  </view>

  <view class="card-detail" bindtap='goDetail'>
    <view>
      <text>会员卡详情</text>
      <icon class="jn-icon icon-rightblue" />
    </view>
  </view>
</view>
<view class="space-box" wx:else>
  <view class="space-bg">
    <image src="/asset/images/nofind.png"></image>
  </view>
  <view class="space-text">暂无会员卡信息</view>
  <view>
    <button class='btn-open-card' bindtap='bindMemberCard'>去绑定会员卡</button>
  </view>
</view>