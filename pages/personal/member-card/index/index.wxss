.page {
  border-top: 2rpx solid #f3f3f3;
}
.card-item {
  width: 690rpx;
  height: 400rpx;
  margin: 30rpx auto;
  position: relative;
}
.card-item>image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.card {
  position: absolute;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 400rpx;
  color: #fff;
  font-size: 36rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  
}
.card-name {
  font-family: "PingFangSC-Semibold";
  font-size: 40rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
.date {
  font-size: 32rpx;
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
}
.card .fr {
  text-align: right;
  padding-right: 30rpx;
}
.tel {
  padding-top: 20rpx;
}
.erweima {
  font-size: 50rpx;
  padding-top:172rpx;
}


.record-box, .card-detail {
  height: 90rpx;
  margin: 0 auto;
  line-height: 90rpx;
  background: #fff;
}
.record-box>view {
  padding: 0 30rpx;
}

.record-box>view, .card-detail>view {
  border-top: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
}

.icon-rightblue {
  font-size: 26rpx;
  color: #c7c7c7;
  text-align: right;
  float: right;
}

.btn-open-card {
  margin-top: 62px;
  width: 180px;
  background: #f60;
  border-radius: 4px;
  font-family: '.PingFangSC-Regular';
  font-size: 16px;
  color: #fff;
}
