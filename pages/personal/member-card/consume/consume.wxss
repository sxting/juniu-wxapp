.toolbar {
  position: relative;
}

.img {
  width: 100%;
  height: 129px;
}

.content {
  position: absolute;
  top: 33px;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
}

.content-title {
  font-family: '.PingFangSC-Regular';
  font-size: 15px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
}

.content-price {
  font-family: '.PingFangSC-Medium';
  font-size: 40px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
}

.consume-price {
  float: right;
}

.product-name {
  font-family: '.PingFangSC-Medium';
  font-size: 15px;
  color: #222;
  letter-spacing: 0;
  line-height: 15px;
}

.product-time {
  font-family: '.PingFangSC-Medium';
  font-size: 12px;
  color: #999;
  letter-spacing: 0;
  line-height: 13px;
  margin-top: 6px;
}
