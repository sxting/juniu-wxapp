<!--pages/personal/collage-order/order/order-list.wxml-->
<view class="page">
  <view class="tab">
    <view wx:for="{{tabList}}" wx:for-index="index"  wx:key="item" bindtap="onTabClick" data-index="{{index}}" data-status="{{item.status}}"
    class="tab-item {{index == tabIndex ? 'active' : ''}}">{{item.typeText}}</view>
  </view>
  <!-- 列表内容 -->
  <view class='list-content-box'>
    <view class='list-content' wx:for="{{ collageListInfor }}" wx:key="item">
      <view class='list-infor'>
        <view class='list-title clearfix'>
          <text class='fl'>拼团</text>
          <text class='fr'>待付款</text>
        </view>
        <view class='detail-infor clearfix'>
          <view class='img-box fl'>
            <image src='{{productImg}}'></image>
          </view>
          <view class='right-infor fl'>
            <view>{{item.activityName}}</view>
            <view>下单时间：{{ item.openedTime }}</view>
            <view>¥<text>399</text></view>
          </view>
        </view>
      </view>
      <!-- <view class='remaining-time'>剩余时间:
        <text>00:00:04</text>
      </view> -->
      <view class='remaining-time' wx:if="{{ item.groupStatus === 'VALID' || item.groupStatus === 'SETTLE' }}">实付款
        <text>299元</text>
      </view>
      <!-- 按钮盒子 -->
      <view class='btn-box' wx:if="{{ item.groupStatus === 'PAY' }}">
        <text class='cancel-btn' bindtap='cancelClick'>取  消</text>
        <text class='pay-btn' bindtap='payImmediate'>立即支付</text>
      </view>
      <view class='btn-box' wx:if="{{ item.groupStatus === 'REFUND' }}" bindtap='onShareAppMessage'>
        <button class="invent-btn" open-type="share" data-activityid="{{ item.activityId }}">邀请好友参团</button>
      </view>
      <view class='btn-box' wx:if="{{ item.groupStatus === 'SETTLE' }}" bindtap='evaluationImmediate' data-activityid="{{ item.activityId }}">
        <text class='pay-btn'>立即评价</text>
      </view>
    </view>
  </view>
  <!-- logo底部 -->
  <view class="jn-bottom"><image src="/asset/images/logo.png"></image></view> 
</view>