<view class="container">
    <view class="select-box">
        <view class="craftsman-select">
            <text>手艺人</text>
            <icon class="jn-icon icon-rightblue"></icon>
            <text class="craftsman-name">请选择手艺人</text>
        </view>
        <view class="product-select">
            <text>商品</text>
            <icon class="jn-icon icon-rightblue"></icon>
            <text class="product-name">请选择商品</text>
        </view>
    </view>
    <!--选择到店时间-->
    <view class="select-time-box">
        <view class="sub-title">选择到店时间</view>
        <view class="date-box">
            <!--当前点击的日期 加day-active类名, 当前日期不可点 加prevent-click类名 -->
            <view wx:for="1234567" class="per-day prevent-click">
                <view>今天</view>
                <view>06.19</view>
            </view>
        </view>
        <view class="time-box">
          <!--当前点击的时间 加time-active类名, 当前时间不可点 加prevent-click类名-->
          <view wx:for="timeList" class="time prevent-click">08:00</view>
        </view>
        <!--需要选择手艺人和商品但是没选择手艺人或商品的时候显示， 上面的日期和时间加 prevent-click类名-->
        <view wx:if="1" class="prevent-click-tip">要先选择上面的手艺人和商品哦! </view>
    </view>
    <!--用户填写信息-->
    <view class="user-msg-box">
        <view class="tel-box">
            <text>手机号(必填)</text>
            <input placeholder-class="placeholder" placeholder="请填写手机号"/>
        </view>
        <view class="note">
            <text>备注</text>
            <input placeholder-class="placeholder" placeholder="请填写备注"/>
        </view>
    </view>
    <!--确认预约-->
    <view class="sure-btn">确认预约</view>
</view>