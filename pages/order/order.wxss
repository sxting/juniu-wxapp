.select-box, .user-msg-box {
    margin-bottom: 20rpx;
    background: #fff;
    border-top: 1px solid #e5e5e5;
    padding: 0 30rpx;
}
.craftsman-select, .product-select {
    height: 90rpx;
    line-height: 90rpx;
}
.craftsman-select {
    border-bottom: 1px solid #e5e5e5;
}
.craftsman-name, .product-name {
    color: #999;
    float: right;
    padding-right: 10rpx;
}
.icon-rightblue {
    float: right;
}
/*选择到店时间*/
.select-time-box {
    background: #fff;
    margin-bottom: 20rpx;
    position: relative;
}
.sub-title {
    padding-left: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-family: "PingFangSC-Medium";
    border-top: 2rpx solid #F3F3F3;
    font-size: 32rpx;
    color: #111111;
}
.today-date {
  font-size: 24rpx;
  color: #4F4E4E;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
}
.today-date text {
  font-size: 32rpx;
  color: #FE6700;
  padding-right: 10rpx;
}

.date-table {
  box-shadow: 0 2rpx 6rpx 0 #D8D8D8;
  border-radius: 8rpx;
  width: 690rpx;
  margin: 0 auto;
}
.week-box, .date-box {
    height: 110rpx;
    border-bottom: 1px solid #e5e5e5; 
    display: flex;
    background-color: #fff;
}
.week-box {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  color: #666666;
}
.date-box {
  height: 94rpx;
  line-height: 94rpx;
  font-size: 36rpx;
  color: #333333;
}
.per-day {
    width: 14.28%;
    text-align: center;
}
.date-box .per-day {
  border-radius: 50%;
  height: 64rpx;
  margin: 15rpx 16rpx;
  line-height: 64rpx;
}

.day-active {
    background: #ff6600;
    color: #fff;
}
.time-box {
    background: #fff;
    display: flex;
    flex-wrap: wrap;
}
.time {
  font-size: 28rpx;
  color: #333333;
  width: 16.67%;
  min-width: 16.67%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1px solid #e5e5e5;
  border-right: 1px solid #e5e5e5;
  box-sizing: border-box;
}
.time:nth-child(6n) {
  border-right: none;
}
.no-work {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin:0 auto;
}

/*当前选中时间样式*/
.time-active {
  color: #ff6600;
}
/*禁止点击*/
.prevent-click {
  background-color: #f2f2f2;
  color: #ABABAB;
}

.prevent-click-tip {
  position: absolute;
  width: 100vw;
  text-align: center;
  top: 50%;
}

.user-msg-box {
    border: none;
}
.tel-box, .note {
     height: 90rpx;
     line-height: 90rpx;
     border-bottom: 1px solid #e5e5e5;
     position: relative;
}
.note {
    border: none;
}
.tel-box input, .note input {
    /* float: right; */
    height: 90rpx;
    line-height: 90rpx;
    text-align: right;
    position: absolute;
    right: 0;
    top: 0;
}
.placeholder {
    font-size: 30rpx;
}
.sure-btn {
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    background: #ff6600;
    color: #fff;
    width: 100vw;
    font-size: 34rpx;
}