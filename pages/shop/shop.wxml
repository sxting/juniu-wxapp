 <view class="shop-box">
  <map id="map" scale="14" markers="{{markers}}" show-location style="width: 100%; height: 164px;"></map>
  <view class="list">
    <view class="classname" style="  width: 100%;display: flex;">
      <text style="  width: 6%;" class="jn-icon icon-location shop-ico"></text>
      <text class="addr">{{addr}}</text>
      </view>
    <view bindtap="makeCall">
      <view class="jn-icon icon-tel shop-ico"></view>
      {{tell}}
      <view class="jn-icon icon-rightwhite shop-ico" style="font-size: 0.6em;"></view>
    </view>
    <view class="classname">
      <view class="jn-icon icon-time shop-ico"></view>
      {{time}}
    </view>
  </view>
</view> 