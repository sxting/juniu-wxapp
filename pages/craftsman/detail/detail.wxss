.craftsman-top {
  height: 384rpx;  
}
.top-image, .craftsman-info {
  width: 100vw;
  height: 384rpx;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  color: #fff;
}

.craftsman-headimg {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}
.craftsman-name {
    font-size: 32rpx;
    padding-bottom: 50rpx;
}
.carftsman-msg {
    padding-left: 30rpx;
    font-size: 22rpx;
    color: #FF6600;
}
.carftsman-msg text {
    margin-right: 30rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
    padding: 0 10rpx;
}
 .craftsman-start-box {
    position: absolute;
    top: 240rpx;
    left: 275rpx;
    padding-top: 10rpx;
    box-sizing: border-box; 
}
.craftsman-info .icon-starempty-copy, .craftsman-info .icon-stars-copy {
    font-size: 26rpx;
    padding-right: 16rpx; 
} 

.store-box {
  height: 128rpx;
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #fff; 
  border-bottom: 1px solid #f8f8f8;
}
.store-name {
  font-size: 30rpx;
  color: #111111;
  padding-top: 18rpx;
}
.store-address {
  font-size: 26rpx;
  color: #999999;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}

.create-comment {
  width: 130rpx;
  height: 130rpx;
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  text-align: center;
}

.shared-box {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #FF6600;
  color: #fff;
  font-size: 36rpx;
  width: 100vw;
  border-radius: 0;
}
.juniu-bottom {
  bottom: 140rpx;
}
.comment-list {
  min-height:440rpx;
}
.icon-Evaluation {
    font-size: 32rpx;
    color: #e5e5e5;
}
scroll-view {
  height: 100%;
  max-height:100%;
}