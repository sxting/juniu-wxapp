<view class="page">
  <view class="page__bd">
    <view class="weui-panel">
      <view class="weui-panel__hd title">全部手艺人({{staffNumber}})</view>
      <view class="weui-panel__bd" wx:if="{{label}}">
        <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg">
            <view wx:for="{{reserveList}}" bindtap="onItemClick" data-staff-id="{{item.staffId}}" data-staff-name="{{item.staffName}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="{{item.avatar}}" class="head-img" /> 
              </view>
              <view class="weui-cell__bd weui-cell_primary">
                <view>{{item.staffName}} <text wx:if="{{item.rank}}" class="label">本店·排名第{{item.rank}}</text></view>
                <view class="weui-media-box__desc">累计服务{{item.serviceCount}}次</view>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>            
          </view>
        </view>
      </view>

      <view class="weui-panel__bd" wx:else>
        <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg">
          <scroll-view scroll-y="true" bindscrolltolower="onScrollTolower">
            <view wx:for="{{staffList}}" bindtap="onItemClick" data-staff-id="{{item.staffId}}" data-staff-name="{{item.staffName}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="{{item.headPortrait}}" class="head-img" /> 
              </view>
              <view class="weui-cell__bd weui-cell_primary">
                <view>{{item.staffName}} <text wx:if="{{item.rank}}" class="label">本店·排名第{{item.rank}}</text></view>
                <view class="weui-media-box__desc">累计服务{{item.serviceCount}}次</view>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>   
            </scroll-view>         
          </view>
        </view>
      </view>
    </view>
  </view>
</view>