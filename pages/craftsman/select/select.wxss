/* pages/craftsman/select/select.wxss */

.title {
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #222;
  letter-spacing: 0;
  line-height: 15px;
}

.head-img {
  width: 50px;
  height: 50px;
  margin-right: 10px;
  border-radius: 25px;
}

.name-label {
  margin-bottom: 9px;
}

.label {
  border: 1rpx solid #197dd1;
  color: #197dd1;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 2px;
  font-size: 20rpx;
}

.red-label {
  border: 1rpx solid #d11921;
  color: #d11921;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 2px;
  font-size: 20rpx;
}

scroll-view {
  height: 100%;
  max-height: 100vh;
}