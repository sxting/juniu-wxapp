.banner-box {
  position: relative;
  color: #fff;
}

.img-box {
  width: 100%;
  height: 360rpx;
  background: #ccc;
  z-index: -1;
}

.img-box image {
  width: 100%;
  height: 360rpx;
}

.store-btn-box {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  color: #111;
  font-size: 32rpx;
  padding: 0 30rpx;
}

.address-and-tel {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #999;
  padding: 0 30rpx;
  border-top: 2rpx solid #f3f3f3;
}
.icon-address {
  font-size: 30rpx;
  padding-right: 6rpx;
}
.icon-tel {
  font-size: 30rpx;
}
.tel-box {
  height: 36rpx;
  border-left: 2rpx solid #e1e1e1;
  padding-left: 30rpx;
  margin-top: 26rpx;
  line-height: 36rpx;
  text-align: right;
}

.new-order-tip-box {
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(0, 0, 0, 0.6);
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.new-order-tip-box text {
  font-size: 26rpx;
  padding-left: 10rpx;
}

.more-right {
  position: absolute;
  right: 24rpx;
}

.product-list {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.sub-title {
  width: 100vw;
  margin-left: -30rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
}

.sub-title-left, .sub-title-right {
  display: flex;
  padding: 0 30rpx;
}

.sub-title-right {
  color: #999;
  font-size: 24rpx;
}

.icon-commodity {
  color: #569cff;
  font-size: 32rpx;
}

.sub-title-text {
  font-family: "PingFangSC-Medium";
  font-size: 32rpx;
  color: #222;
  padding-left: 10rpx;
}

/*商品start  */
 .product-list-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: 20rpx; 
} 

.product-box {
  height: 310rpx;
  width: 330rpx;
  min-width: 330rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0 2rpx 6rpx 0 #D8D8D8;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.product-big:first-child {
  width: 690rpx;
  min-width: 690rpx;
  height: 490rpx; 
  border-radius: 8rpx;
}

.product-img {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.product-big:first-child .product-img {
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.product-bottom {
  padding: 0 20rpx;
}

.product-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.current-price {
  color: #f60;
  font-size: 32rpx;
  float: right;
}

.product-item-tab {
  font-size: 22rpx;
  color: #FF6600;
  opacity: 0.8;
  border: 2rpx solid #FF6600;
  border-radius: 30rpx;
  padding: 0 8rpx;
}
/*商品end  */

/*手艺人start */
.cfaftsman-list {
  background-color: #fff;
  margin-top: 20rpx;
}

.cfaftsman-list .sub-title {
  margin-left: 0;
}

.icon-goldmedal {
  color: #ffaf48;
  font-size: 32rpx;
}

.cfaftsman-box {
  height: 288rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
  display: flex;
}

.cfaftsman-box image {
  width: 220rpx;
  height: 180rpx;
  border-radius: 8rpx;
  /* border: 1px solid #e5e5e5; */
}

.cfaftsman {
  width: 33%;
  text-align: center;
}
/*手艺人end   */

/*优惠券start  */
.ticket-color {
  color: #fa6f6f;
}

.tickte-item {
  position: relative;
  width: 690rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 2rpx 6rpx 0rpx #D8D8D8; 
}

.ticket-block {
  padding-left: 30rpx;
  padding-top: 34rpx;
  padding-bottom: 20rpx;
}

.yuan1 {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #fff;
  left: -20rpx;
  top: 160rpx;
}

.yuan2 {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #fff;
  right: -20rpx;
  top: 160rpx;
}

.ticket-top {
  display: flex;
  justify-content: space-between;
  text-align: center;
  height: 180rpx;
}

.ticket-price-box {
  width: 200rpx;
  color: #FF3232; 
  padding-top: 10rpx; 
}

.ticket-title-box {
  width: 350rpx;
  text-align: left;
}

.ticket-btn {
  width: 140rpx;
  padding-top: 10rpx;
}

.ticket-price text {
  font-size: 70rpx;
}

.ticket-type {
  font-size: 22rpx; 
}
.ticket-type-gift {
  font-size: 36rpx;
  padding-top: 46rpx;
}

.ticket-title {
  font-size: 36rpx;
  color: #111111;
  padding: 34rpx 0 16rpx;
}
.use-limit-box, .gift-name {
  font-size: 26rpx;
  color: #001414;
}
.use-limit text {
  color: #FF3232;
}
.tip {
  font-size: 22rpx;
  color: #666666;
}

.ticket-bottom {
  color: #999;
  font-size: 24rpx;
  padding: 20rpx;
  background: #FAFAFA;
  height: 140rpx;
  box-sizing: border-box;
  line-height: 50rpx;
}
.ticket-bottom-close {
  height: 90rpx;
  padding: 0 20rpx;
  line-height: 90rpx;
}
.icon-xia {
  float: right;
  font-size: 28rpx;
  color: #AAA;
}
.icon-shang {
  float: right;
  font-size: 28rpx;
  color: #AAA;
  padding-top:20rpx;
