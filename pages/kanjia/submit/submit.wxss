.kanjia-normal {
  min-height: 100vh;
  background-color: #f8f8f8;
}
.product-msg {
  background-color: #fff;
  height: 200rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.product-msg image {
  width: 190rpx;
  height: 140rpx;
  float: left;
}
.product-r {
  display: inline-block;
  width: 450rpx;
  margin-left: 29rpx;
  margin-top: -8rpx;
}
.product-name {
  font-family: "PingFangSC-Semibold";
  font-size: 32rpx;
  color: #111111;  
}
.product-price {
  font-size: 26rpx;
}
.current-price {
  color: #ff6600;
  font-family: "PingFangSC-Semibold";
}
.current-price text {
  font-size: 40rpx;
}
.origin-price {
  color: #666666;
  text-decoration: line-through;
  margin-left: 26rpx;
}

.price-box {
  background-color: #fff;
  font-size: 30rpx;
  color: #666666;
  margin-top: 20rpx;
  padding-left: 30rpx;
}
.price-box .item {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #F3F3F3;
  padding-right: 30rpx;
}
.price-box .item:last-child {
  border-bottom: none;
}
.price-box .item .fr {
  color: #111111;
}
.price-box .item .pay-price {
  font-family: "PingFangSC-Semibold";
  font-size: 34rpx;
  color: #FF6600;
}

.tel-box {
  background-color: #fff;
  margin-top: 20rpx;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 28rpx;
  color: #333333;
  padding: 0 30rpx;
}

.tel-input {
  display: inline-block;
  padding-left: 30rpx;
  height: 110rpx;
  line-height: 110rpx;
  vertical-align: middle;
}
.tel-box button {
  float: right;
  width: 194rpx;
  height: 66rpx;
  line-height: 66rpx;
  border: 1rpx solid #FF6600;
  border-radius: 50rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #FF6600;
  margin-top: 22rpx;
  padding: 0;
}

.pay-btn {
  margin: 80rpx auto;
  background: #FF6600;
  border-radius: 50rpx;
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
}
