/**index.wxss**/

.shouquan-box {
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  text-align: center;
  font-size: 30rpx;
  color: #888;
  padding: 0 50rpx;
  z-index: 9999;
}

.shouquan-box image {
  width: 170rpx;
  height: 140rpx;
  margin: 240rpx auto 190rpx;
}

.shouquan-title {
  font-size: 40rpx;
  color: #000;
  padding-bottom: 30rpx;
}

.shouquan-btn {
  width: 670rpx;
  height: 94rpx;
  margin: 60rpx auto;
  line-height: 94rpx;
  color: #fff;
  background-color: #1aad19;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}