page {
  border-top: 2rpx solid #f3f3f3;
}

.order-detail {
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  height: 200rpx;
  position: relative;
}
.img-box {
  width: 188rpx;
  height: 140rpx;
  float: left;
}
.img-box image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.detail-content {
  float: left;
  margin-left:  30rpx;
}
.collage-name {
  color: #333;
  font-size: 32rpx;
  margin-top: 14rpx;
}
.collage-name text:last-child {
  font-size: 26rpx; 
  position: absolute;
  right: 30rpx;
  top: 50rpx;
}
.detail-content .jn-color{
  color: #FF9D5B;
}
.collage-num {
  font-size: 26rpx;
  color: #000000;
}

.price-box {
  width: 690rpx;
  margin: 30rpx auto;
  font-size: 26rpx;
  color: #333;
}
.price-box .li {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 20rpx;
}
.price-box .li:last-child {
  height: 88rpx;
  line-height: 88rpx;
  border-top: 2rpx solid #f3f3f3;
}
.price-box .li>text:first-child {
  color: #666666;
}
.price-box .li:last-child>text:first-child {
  font-size: 30rpx;
}
.price-box .li:last-child>text:last-child {
  color: #ff6600;
}
.price-box .li:last-child .price {
  font-size: 32rpx;
}

.order-submit {
  background-color: #ff6600;
  color: #FFFFFF;
  text-align: center;
  margin: 50rpx auto;
  height: 84rpx;
  line-height: 84rpx;
  width: 690rpx;
  border-radius: 200rpx;
  font-size: 36rpx;
}

.product-name {
  display: inline-block;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.tel-box {
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
  width:690rpx;
  margin:30rpx auto;
  font-size:26rpx;
  color:#333;
  padding:0 20rpx;
  box-sizing:border-box;
}

.tel-box input {
    height: 88rpx;
    line-height: 88rpx;
    position: absolute;
    left: 130rpx;
    top: 0;
    width: 220rpx;
}
.placeholder {
    font-size: 26rpx;
    color: #999999;
}
.tel-btn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}


