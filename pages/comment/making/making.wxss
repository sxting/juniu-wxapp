.comment-start-box {
    height: 90rpx;
    line-height: 90rpx;
    border-top: 1px solid #e5e5e5;
    background: #fff;
    padding: 0 30rpx;
}
.making-comment-start-box {
     position: absolute;
     top: 0;
     left: 160rpx;
}
.making-comment-start-box .icon-starempty, .making-comment-start-box .icon-stars {
    color: #999;
    font-size: 34rpx;
    padding: 0;
    padding-left: 36rpx;
}
.making-comment-start-box .icon-stars {
    color: #ff6600;
}
.textarea-box {
    margin: 20rpx 0;
    background-color: #fff; 
    height: 320rpx;
}
.textarea-box textarea {
    width: 100%;
    height: 100%;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}
.placeholder {
    font-size: 30rpx;
}
.pictures-box {
    height: 180rpx;
    padding: 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
}
.add-picture-btn {
    width: 120rpx;
    height: 120rpx;
    border: 1px solid #e5e5e5;
    text-align: center;
}
.add-picture-btn .icon-camera {
    color: #e5e5e5;
    font-size: 44rpx;
    position: relative;
    left: -6rpx;
    top: 6rpx;
}
.icon-add {
    color: #e5e5e5;
    font-size: 50rpx;
    position: relative;
    top: 20rpx;
}
.add-picture-btn .text {
    font-size: 20rpx;
    color: #999999;
}
.select-product, .select-craftsman {
    height: 90rpx;
    line-height: 90rpx;
    margin: 20rpx 0;
    background-color: #fff;
    padding: 0 30rpx;
}
.icon-rightblue {
    font-size: 26rpx;
    color: #c7c7c7;
    text-align: right;
    float: right;
}
.submit-btn {
    height: 80rpx;
    background: #FF6600;
    border-radius: 4px;
    margin-top: 80rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    font-size: 32rpx;
}