.product-image{
    width: 100vw;
    height: 520rpx;
    display: block;
}
.product-box {
    background-color: #fff;
    padding: 20rpx 20rpx 0;
    box-sizing: border-box;
}
.product-name {
  font-size: 32rpx;
}
.share-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border: none;
  outline: none;
  float: right;
  text-align: center;
  line-height: 40rpx;
  padding: 0;
  margin: 0;
}
.share-btn::after {
  border: none;
}
 .icon-fenxiang {
  font-size: 44rpx;
  color: #999999;
} 
.price-box{
    font-size: 36rpx;
    color: #ff6600;
}
.price-box .current {
    font-size: 60rpx;
}

.store-box {
  background-color: #fff;
  margin-top: 20rpx;
}
.store-box .sub-title {
  padding: 0 20rpx;
  border-bottom: 1px solid #f3f3f3;
  height: 88rpx;
  line-height: 88rpx;
}
.store-name {
  padding: 20rpx 20rpx 10rpx;
  font-size: 30rpx;
}
.icon-tel {
  font-size: 36rpx;
  color: #999999;  
}
.tel-box {
  height: 36rpx;
  border-left: 2rpx solid #e1e1e1;
  padding-left: 30rpx;
  line-height: 36rpx;
  text-align: right;
  margin-top:26rpx;
}

.product-detail, .notice {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
} 
.product-detail image {
  width: 690rpx;
  height: 300rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #999999;
}
.sub-title {
  font-size: 32rpx;
  color: #333333;
}

.icon-Evaluation {
    font-size: 32rpx;
    color: #e5e5e5;
}
scroll-view {
  height: 100%;
  max-height: 786rpx;
}
.go-pay {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #FF6600;
  color: #fff;
  font-size: 36rpx;
  width: 100vw;
}
.juniu-bottom {
  bottom: 120rpx;
}

.big-img {
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  width: 100vw;
  height: 100vh;
  z-index: 100;
}
.big-img image {
  height: 860rpx;
  width: 100vw;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -430rpx;
}

.select-count-box {
  box-shadow: 0 -1px 3px 0 #D8D8D8;
  border-radius: 6px 6px 0 0;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 330rpx;
  width: 100vw;
  color: #333;
  font-size: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background:#fff;
}
.count-box {
  margin-top: 96rpx;
}
.count-btn {
  text-align: center;
}
.count-btn>text {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  border: 2rpx solid #FF6600;
  border-radius: 4rpx;
}
.count-btn .count {
  width: 80rpx;
  background-color: #ff6600;
  color: #fff;
  margin: 0 20rpx;
  font-family: 'PingFangSC-Medium';
}
.count-btn .count-btn-left {
  background: #FBFBFB;
  color: #ff6600;
}
.count-btn .count-btn-right {
  background-color: #ff6600;
  color: #fff;
  font-family: 'PingFangSC-Medium';
}
.icon-close1 {
  color: #999999;
  font-size: 40rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding:0 10rpx;
}