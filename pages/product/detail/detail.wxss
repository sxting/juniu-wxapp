.product-image{
    width: 100vw;
    height: 360rpx;
    display: block;
}
.product-box {
    background-color: #fff;
    padding: 20rpx 20rpx 0;
    box-sizing: border-box;
}
.product-name {
  font-size: 32rpx;
}
.share-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border: none;
  outline: none;
  float: right;
  text-align: center;
  line-height: 40rpx;
  padding: 0;
  margin: 0;
}
.share-btn::after {
  border: none;
}
 .icon-share {
  font-size: 44rpx;
  color: #999999;
} 
.price-box{
    font-size: 36rpx;
    color: #ff6600;
}
.price-box .current {
    font-size: 60rpx;
}

.store-box {
  background-color: #fff;
  margin-top: 20rpx;
}
.store-box .sub-title {
  padding: 0 20rpx;
  border-bottom: 1px solid #f3f3f3;
  height: 88rpx;
  line-height: 88rpx;
}
.store {
  height: 144rpx;
  padding: 0 20rpx;
}
.store-name {
  padding: 20rpx 0 10rpx;
  font-size: 30rpx;
}
.address-and-tel {
  font-size: 26rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
}
.icon-address {
  font-size: 30rpx;
  padding-right: 6rpx;
  color: #3b3b3b;
  line-height: 30rpx;
  vertical-align: text-bottom;
}
.icon-tel {
  font-size: 36rpx;
  color: #999999;  
}
.tel-box {
  height: 36rpx;
  border-left: 2rpx solid #e1e1e1;
  padding-left: 30rpx;
  line-height: 36rpx;
  text-align: right;
}

.icon-Evaluation {
    font-size: 32rpx;
    color: #e5e5e5;
}
scroll-view {
  height: 100%;
  max-height: 786rpx;
}
.go-pay {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #FF6600;
  color: #fff;
  font-size: 36rpx;
  width: 100vw;
}
.juniu-bottom {
  bottom: 120rpx;
}