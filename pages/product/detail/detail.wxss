.product-image{
    width: 100vw;
    height: 360rpx;
    display: block;
}
.product-box {
    height: 140rpx;
    background-color: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}
.price-box{
    font-size: 26rpx;
}
.price-box>text:first-child {
    color: #ff6600;
}
.price-box .current {
    font-family: "PingFangSC-Medium";
    font-size: 32rpx;
}
.price-box text:last-child {
    color: #999;
    padding-left: 18rpx;
    text-decoration: line-through;
}
.comment-list {
    margin-top: 20rpx;
    background-color: #fff;
}
.sub-title {
    height: 90rpx;
    line-height: 90rpx;
    padding-left: 30rpx;
    border-bottom: 1px solid #e5e5e5;
}
.icon-Evaluation {
    font-size: 32rpx;
    color: #e5e5e5;
}
scroll-view {
  height: 100%;
  max-height: 786rpx;
}