<view class="container">
    <image class="product-image" src="{{productInfo.url}}"></image>
    <view class="product-box">
        <view class="product-name">{{productInfo.productName}}</view>
        <view class="price-box">
            <text> <text class="current">{{productInfo.currentPrice / 100}}</text>元 </text> 
            <text wx:if="{{productInfo.originalPrice}}"> <text>{{productInfo.originalPrice / 100}}</text>元 </text>
        </view>
    </view>
    <!--顾客评价-->
    <view class="comment-list">
        <view class="sub-title">
            <icon class="jn-icon icon-Evaluation"></icon> 顾客评价
        </view>
        <scroll-view scroll-y="true" bindscrolltolower="onScrollTolower">
        <!--循环的评价-->
        <view wx:for="{{commentList}}" wx:for-item="comment" class="comment-box w-inner">
            <view class="comment-top">
                <image src="{{comment.headImageUrl}}"></image>
                <view class="comment-top-center">
                    <view>{{comment.nick}}</view>
                    <!--星级-->
                    <view class="start-box">
                        <view class="space-start-box">
                            <icon wx:for="{{starArr}}" class="jn-icon icon-starempty"></icon>
                        </view>
                        <view class="starts-box">
                            <icon wx:for="{{starArr}}" wx:for-item="star" wx:if="{{comment.score > star}}" class="jn-icon icon-stars"></icon>
                        </view>
                    </view>
                </view>
                <view class="comment-time-box">
                    <view>{{comment.date}}</view>
                    <view>{{comment.time}}</view>
                </view>
            </view>
            <view class="comment-content"> {{comment.content}} </view>
            <view class="comment-images">
                <image wx:for="{{comment.imagesUrl}}" src="{{item}}"></image>
            </view>
        </view>
        </scroll-view>
    </view>
</view>